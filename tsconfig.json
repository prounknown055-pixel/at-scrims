{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",

    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    "jsx": "react-jsx",

    "useDefineForClassFields": false,
    "allowJs": true,

    "moduleResolution": "node",
    "isolatedModules": true,
    "moduleDetection": "force",

    "skipLibCheck": true,
    "types": ["node"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "noEmit": true
  }
}
